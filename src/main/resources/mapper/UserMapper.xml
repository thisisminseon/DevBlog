<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devblog.mapper.UserMapper">

    <!-- Find user by ID -->
    <select id="findById" parameterType="long" resultType="com.devblog.domain.User">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <!-- Find user by loginId (for authentication) -->
    <select id="findByLoginId" parameterType="string" resultType="com.devblog.domain.User">
        SELECT * FROM users WHERE login_id = #{loginId}
    </select>

    <!-- Find user by username -->
    <select id="findByUsername" parameterType="string" resultType="com.devblog.domain.User">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <!-- Find user by email -->
    <select id="findByEmail" parameterType="string" resultType="com.devblog.domain.User">
        SELECT * FROM users WHERE email = #{email}
    </select>

    <!-- Insert new user -->
    <insert id="insert" parameterType="com.devblog.domain.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (login_id, username, email, password, role)
        VALUES (#{loginId}, #{username}, #{email}, #{password}, #{role})
    </insert>

    <!-- Update user info -->
    <update id="update" parameterType="com.devblog.domain.User">
        UPDATE users
        SET username = #{username},
            email = #{email},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <!-- Delete user -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <!-- Find all users -->
    <select id="findAll" resultType="com.devblog.domain.User">
        SELECT * FROM users ORDER BY created_at DESC
    </select>

    <!-- Update user role -->
    <update id="updateRole">
        UPDATE users SET role = #{role}, updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <!-- Count all users -->
    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM users
    </select>

</mapper>
