<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.devblog.mapper.PostLikeMapper">

    <!-- Insert like -->
    <insert id="insert" parameterType="com.devblog.domain.PostLike">
        INSERT INTO post_like (post_id, user_id)
        VALUES (#{postId}, #{userId})
    </insert>

    <!-- Delete like -->
    <delete id="delete">
        DELETE FROM post_like
        WHERE post_id = #{postId} AND user_id = #{userId}
    </delete>

    <!-- Count likes for a post -->
    <select id="countByPostId" parameterType="long" resultType="int">
        SELECT COUNT(*) FROM post_like WHERE post_id = #{postId}
    </select>

    <!-- Find like by post ID and user ID -->
    <select id="findByPostIdAndUserId" resultType="com.devblog.domain.PostLike">
        SELECT * FROM post_like
        WHERE post_id = #{postId} AND user_id = #{userId}
    </select>

</mapper>
